<project name="dataadapters" default="test" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

	<description>Shows how data adapters can be serialized/deserialized using Castor and Jackson librairies</description>

	<import file="../build-sample-classpath.xml"/>

	<property name="sample.dir" value="dataadapters"/>
	<property name="sample.base.name" value="DataAdapters" />
	<property name="sample.app.name" value="${sample.base.name}App" />
	
	<target name="javac" description="Compiles the java source files of the test application." depends="prepare-compile-classpath">
		<mkdir dir="./build/classes"/> 
		<javac srcdir="../../../ext/castor/src/main/java" destdir="./build/classes" debug="true" optimize="false" target="1.8" source="1.8"
				encoding="UTF-8" includeantruntime="false">
			<classpath refid="sample-classpath"/>
			<compilerarg value="-Xlint:-unchecked"/>
			<compilerarg value="-Xlint:deprecation"/>
			<compilerarg value="-Xlint:-options"/>
		</javac>
		<copy todir="./build/classes">
			<fileset dir="../../../ext/castor/src/main/resources">
				<include name="**/*.properties"/>
				<include name="**/*.xml"/>
			</fileset>
		</copy>
		<ant dir="../" target="javac"/>
	</target>

	<target name="clean" description="Deletes all the generated files.">
		<ant dir="../" target="clean-sample"/>
	</target>
	
	<target name="test" description="Runs the sample.">
		<echo message="==================================="/>
		<echo message=" Data Adapters Sample"/>
		<echo message="==================================="/>
		<antcall target="clean" />
		<antcall target="javac" />
		<ant dir="../" target="test"/>
	</target>
</project>
