<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.sf.jasperreports</groupId>
		<artifactId>jasperreports-parent</artifactId>
		<version>${revision}</version>
		<relativePath>../pom-parent.xml</relativePath>
	</parent>
	<groupId>net.sf.jasperreports</groupId>
	<artifactId>jasperreports-documentation</artifactId>
	<packaging>pom</packaging>
	<name>JasperReports Documentation</name>
	<description>JasperReports Documentation</description>
	<url>http://jasperreports.sourceforge.net</url>
	<scm>
		<connection>${scmConnection}</connection>
		<tag>${revision}</tag>
		<url>${scmUrl}</url>
	</scm>
	<properties>
		<skipInstall>false</skipInstall>
		<skipDeploy>false</skipDeploy>
	</properties>
	<build>
		<directory>../dist</directory>
		<outputDirectory>${project.build.directory}/docs</outputDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.0.2</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/docs</outputDirectory>
							<resources>
								<resource>
									<directory>resources</directory>
									<targetPath>resources</targetPath>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<includes>
										<include>JasperReports-Ultimate-Guide-3.pdf</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.0.1</version>
				<configuration>
					<quiet>true</quiet>
					<doclint>none</doclint>
					<docfilessubdirs>true</docfilessubdirs>
					<sourcepath>../target/classes</sourcepath>
					<outputDirectory>${project.build.directory}/docs</outputDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xml-maven-plugin</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
						<goals>
							<goal>transform</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<transformationSets>
						<transformationSet>
							<dir>../src/net/sf/jasperreports/engine/dtds</dir>
							<includes>jasperreport.xsd</includes>
							<stylesheet>schema.reference.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs</outputDir>
						    <fileMappers>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
						           <targetName>schema.reference.html</targetName>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
						<transformationSet>
							<dir>../src/net/sf/jasperreports/components</dir>
							<includes>components.xsd</includes>
							<stylesheet>components.schema.reference.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs</outputDir>
						    <fileMappers>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
						           <targetName>components.schema.reference.html</targetName>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
						<transformationSet>
							<dir>../src/net/sf/jasperreports/parts</dir>
							<includes>parts.xsd</includes>
							<stylesheet>parts.schema.reference.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs</outputDir>
						    <fileMappers>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
						           <targetName>parts.schema.reference.html</targetName>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
						<transformationSet>
							<dir>${basedir}</dir>
							<includes>config.reference.xml</includes>
							<stylesheet>config.reference.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs</outputDir>
						    <fileMappers>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
						           <targetExtension>.html</targetExtension>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
						<transformationSet>
							<dir>${basedir}</dir>
							<includes>sample.reference.xml</includes>
							<stylesheet>sample.reference.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs</outputDir>
						    <fileMappers>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
						           <targetExtension>.html</targetExtension>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
						<transformationSet>
							<dir>../demo/samples</dir>
							<includes>**/docs/index.xml</includes>
							<stylesheet>sample.xsl</stylesheet>
							<outputDir>${project.build.directory}/docs/sample.reference</outputDir>
						    <fileMappers>
								<fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
									<pattern>\/docs\/</pattern>
									<replacement>/</replacement>
								</fileMapper>
						        <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
						           <targetExtension>.html</targetExtension>
						        </fileMapper>
						    </fileMappers>
						</transformationSet>
					</transformationSets>
				</configuration>
			</plugin>	
		</plugins>
	</build>
</project>
