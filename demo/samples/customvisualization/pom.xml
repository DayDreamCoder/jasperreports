<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.sf.jasperreports</groupId>
		<artifactId>jasperreports-samples-parent</artifactId>
		<version>${revision}</version>
		<relativePath>../pom-parent.xml</relativePath>
	</parent>
	<artifactId>jasperreports-samples-customvisualization</artifactId>
	<packaging>jar</packaging>
	<properties>
		<sample.base.name>CustomVisualization</sample.base.name>
		<sample.report.name>LeafletMarkers</sample.report.name>
	</properties>
	<dependencies>
		<dependency>
			<groupId>net.sf.jasperreports</groupId>
			<artifactId>jasperreports-custom-visualization</artifactId>
			<version>${revision}</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.mozilla</groupId>
			<artifactId>rhino</artifactId>
			<version>${rhino.version}</version>
			<scope>runtime</scope>
			<optional>false</optional>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<id>copy-css</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}</outputDirectory>
							<resources>
								<resource>
									<directory>components</directory>
									<targetPath>classes</targetPath>
									<includes>
										<include>**/*.css</include>
									</includes>
								</resource>
								<resource>
									<directory>libraries/leaflet</directory>
									<targetPath>classes/leafletmarkers</targetPath>
									<includes>
										<include>**/*.css</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>${exec-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>build-component</id>
						<configuration>
							<mainClass>org.mozilla.javascript.tools.shell.Main</mainClass>
							<additionalClasspathElements>
								<additionalClasspathElement>../../common-samples/classes</additionalClasspathElement>
							</additionalClasspathElements>
							<arguments>
								<argument>-opt</argument>
								<argument>-1</argument>
								<argument>../../libraries/requirejs/r-2.3.5.js</argument>
								<argument>-o</argument>
								<argument>build.js</argument>
								<argument>out=${project.build.directory}/classes/${cvc.component.name}/${cvc.component.name}.min.js</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>build-component-figures</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=figures</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/figures</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>build-component-leafletmarkers</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=leafletmarkers</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/leafletmarkers</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>build-component-radialprogress</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=radialprogress</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/radialprogress</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>build-component-sparkline</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=sparkline</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/sparkline</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>build-component-simplerectangle</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=simplerectangle</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/simplerectangle</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>build-component-d3rectangle</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>-f</argument>
								<argument>${project.basedir}/pom.xml</argument>
								<argument>exec:java@build-component</argument>
								<argument>-Dcvc.component.name=d3rectangle</argument>
							</arguments>
							<workingDirectory>${project.basedir}/components/d3rectangle</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>components</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>resources:copy-resources@copy-css</argument>
								<argument>exec:exec@build-component-figures</argument>
								<argument>exec:exec@build-component-leafletmarkers</argument>
								<argument>exec:exec@build-component-radialprogress</argument>
								<argument>exec:exec@build-component-sparkline</argument>
								<argument>exec:exec@build-component-simplerectangle</argument>
								<argument>exec:exec@build-component-d3rectangle</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>all</id>
						<configuration>
							<executable>mvn</executable>
							<arguments>
								<argument>exec:exec@components</argument>
								<argument>exec:java@test</argument>  
							</arguments>
							<workingDirectory>${project.basedir}</workingDirectory>   
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
